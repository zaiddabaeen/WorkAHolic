<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="setting_notif_menu"
        android:title="Enable notification status"
        android:summary="Be able to stop working from the system notifications menu"
        android:defaultValue="true" />

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="setting_day_hour"
        android:title="Daily Working Hours"
        android:defaultValue="8"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="setting_week_hour"
        android:title="Weekly Working Hours"
        android:defaultValue="24"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:singleLine="true"
        android:maxLines="1" />


</PreferenceScreen>
